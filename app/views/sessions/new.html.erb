<div class="flex items-center justify-center min-h-screen flex-col">
  <h2 class="text-center text-2xl font-bold mb-4">Login</h2>
  <div class="card w-full max-w-md shadow-lg bg-base-200">
    <div class="card-body">

      <%= form_with(model: @bank_account, url: sessions_path, local: true, class: "space-y-4") do |f| %>
        <div class="form-control">
          <%= f.label :account_id, class: "label" %>
          <%= f.text_field :account_id, class: "input input-bordered" %>
        </div>
        <div class="form-control">
          <%= f.label :pin, class: "label" %>
          <%= f.password_field :pin, class: "input input-bordered" %>
        </div>
        <div class="form-control mt-6">
          <%= f.submit 'Login', class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <%#= link_to "Sign up", new_bank_account_path, class: '' %>
    </div>
  </div>
</div>