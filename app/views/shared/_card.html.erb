<div class="w-full md:w-1/2 px-2 mb-4">
  <div class="card bg-base-200 shadow-xl" style="height: 200px;" >
    <div class="card-body">
      <h2 class="card-title"><%= title %></h2>
      <p><%= subtitle %></p>

      <% if options[:msg] %>
        <p><%= options[:msg] %></p>
      <% end %>

      <% if options[:link_path] %>
        <div class="card-actions">
          <%= link_to 'Click to see', options[:link_path], class: 'btn btn-primary w-1/3' %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>